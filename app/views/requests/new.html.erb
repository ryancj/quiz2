<br>
<%= image_tag 'supporter.png' %>
<h1>Supporter</h1>
<%= form_for @request do |f| %>
<p>
  <%= f.label :name %>
  <%= f.text_field :name %>
</p>
<p>
  <%= f.label :email %>
  <%= f.text_field :email %>
</p>
<p>
  <%= f.label :department %>:
  <%= f.label :department, 'Sales' %>
  <%= f.radio_button :department, 'Sales'%>
  <%= f.label :department, 'Marketing' %>
  <%= f.radio_button :department, 'Marketing' %>
  <%= f.label :department, 'Technical'%>
  <%= f.radio_button :department, 'Technical'%>
</p>
<p>
  <%= f.label :message %>
  <%= f.text_area :message %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>
